<h2><%= @task.title %></h2>

<div class="card mt-4" style="width: 330px;">
  <div class="card-body">
    <p>
    <%= @task.description %>
        <% if @task.completed %>
        <i class="fa-regular fa-square-check"></i>
        <% else %>
        <i class="fa-regular fa-square"></i>
        <% end %></p>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Home", tasks_path, class: "btn btn-light" %>
  <%= link_to "⚙️", edit_task_path, class: "btn btn-light"%>
  <%= link_to "🗑️", task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?" }, class: "btn btn-light" %>
</div>
